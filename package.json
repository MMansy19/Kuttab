{
  "name": "kottab",
  "version": "1.0.0",
  "description": "- تمكين المعلمين المستقلين من الوصول لطلاب محتاجين لتعلم القرآن.",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "clean": "node clean.js",
    "clean:deep": "rd /s /q node_modules & rd /s /q .next & rd /s /q generated",
    "install:safe": "npm install --ignore-scripts && npx prisma generate --no-engine",
    "prisma:fix": "npx @prisma/internals download --version 6.6.0",
    "build:safe": "cross-env NODE_OPTIONS=--max-old-space-size=4096 NEXT_DISABLE_FILE_SYSTEM_API=1 next build",
    "build": "node build-prep.js && npm run prisma:fix && cross-env NODE_OPTIONS=--max-old-space-size=4096 next build --config next.config.build.js --no-lint",
    "build-original": "node clean.js && prisma generate && next build",
    "start": "next start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run prisma:fix",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.7.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/bcryptjs": "^3.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "glob": "^11.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.0",
    "next": "^15.3.1",
    "next-auth": "^4.24.11",
    "prisma": "^6.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-rtl": "^0.9.0",
    "zod": "^3.24.3",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
