{
  "name": "kottab",
  "version": "1.0.0",
  "description": "Enable independent teachers to reach students needing Quran education",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:vercel": "npm ls typescript @types/react @types/node || npm install --save-dev typescript @types/react @types/node && node scripts/pre-build-vercel.js && prisma generate && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "optimize:images": "node scripts/convert-to-webp.js",
    "optimize:links": "node scripts/secure-links.js",
    "analyze": "ANALYZE=true next build"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "6.6.0",
    "@tailwindcss/postcss": "4.1.4",
    "autoprefixer": "10.4.16",
    "bcryptjs": "2.4.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "glob": "10.3.10",
    "jsonwebtoken": "9.0.2",
    "lucide-react": "0.510.0",
    "next": "15.3.2",
    "next-auth": "4.24.11",
    "postcss": "8.4.35",
    "prisma": "6.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.5.0",
    "rimraf": "5.0.5",
    "tailwind-merge": "3.2.0",
    "tailwindcss": "3.4.17",
    "tailwindcss-rtl": "0.9.0",
    "zod": "3.24.3",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "3.0.0",
    "@types/node": "22.15.18",
    "@types/react": "19.1.4",
    "@types/react-dom": "18.2.19",
    "cross-env": "7.0.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
